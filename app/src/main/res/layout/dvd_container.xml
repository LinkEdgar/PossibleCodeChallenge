<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dvd_container_height">

    <ImageView
        android:id="@+id/container_dvd_image_iv"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        tools:src="@mipmap/ic_launcher_round"
        android:layout_width="@dimen/dvd_image_width"
        android:layout_height="@dimen/dvd_image_height" />
    <TextView
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:maxLines="3"
        android:layout_centerVertical="true"
        android:id="@+id/container_dvd_title_tv"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_toRightOf="@id/container_dvd_image_iv"
        tools:text="DVD Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/background_grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</RelativeLayout>